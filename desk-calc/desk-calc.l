%{
#include "y.tab.h"  // Include the header generated by YACC
%}

DIGIT [0-9]
NUM    {DIGIT}+   // Matches integers

%%

{NUM}  { yylval = atoi(yytext); return NUM; }  // Return the NUM token
[+\-*/()] { return yytext[0]; }  // Return operators and parentheses
[ \t\n] ;  // Ignore whitespaces and newlines
.       { printf("Unknown character: %s\n", yytext); }

%%
